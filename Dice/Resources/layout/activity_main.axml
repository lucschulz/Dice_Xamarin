<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:orientation="vertical"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/llv_mainContainer"
		android:background="#ff00796b">
		<LinearLayout
			android:orientation="horizontal"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/llh_firstRow"
			android:gravity="center"
			android:layout_marginTop="25dp">
			<ImageView
				android:src="@drawable/die1_white"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_marginEnd="25dp"
				android:id="@+id/die1" />
			<ImageView
				android:src="@drawable/die2_white"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_marginStart="25dp"
				android:id="@+id/die2" />
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/ll_secondRow"
			android:gravity="center"
			android:layout_marginTop="25dp">
			<ImageView
				android:src="@drawable/die3_white"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_marginEnd="25dp"
				android:id="@+id/die3"
				android:layout_marginRight="20dp" />
			<ImageView
				android:src="@drawable/die4_white"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_marginStart="25dp"
				android:id="@+id/die4" />
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/ll_thridRow"
			android:gravity="center"
			android:layout_marginTop="25dp">
			<ImageView
				android:src="@drawable/die5_white"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_marginEnd="25dp"
				android:id="@+id/die5" />
			<ImageView
				android:src="@drawable/die6_white"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_marginStart="25dp"
				android:id="@+id/die6" />
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:minWidth="25px"
			android:minHeight="50dp"
			android:layout_marginTop="25dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/llh_bottomContainer" >
			<LinearLayout
				android:orientation="horizontal"
				android:minWidth="25px"
				android:minHeight="25px"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/llh_plusMinus"
				android:layout_weight="0.5"
				android:gravity="center_vertical">
				<android.support.design.widget.FloatingActionButton
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:src="@drawable/minusblue"
					android:id="@+id/btnRemoveDie"
					android:layout_marginLeft="25dp" />
				<android.support.design.widget.FloatingActionButton
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:src="@drawable/plusblue"
					android:id="@+id/btnAddDie"
					android:layout_marginLeft="25dp" />
			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:minWidth="25px"
				android:minHeight="25px"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/llh_rollDice"
				android:layout_weight="0.5"
				android:gravity="right|center_vertical">
				<Button
					android:text="@string/button_RollDice"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginRight="25dp"
					android:id="@+id/btnRollDice"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<android.support.design.widget.BottomNavigationView
		android:id="@+id/navigation"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="0dp"
		android:layout_marginStart="0dp"
		android:background="?android:attr/windowBackground"
		android:layout_alignParentBottom="true"
		app:menu="@menu/navigation" >
		
	</android.support.design.widget.BottomNavigationView>

	
</RelativeLayout>
